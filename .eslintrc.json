{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "import/extensions": "off",
    "linebreak-style": 0,
    "max-depth": ["error", 1],
    "max-lines-per-function": ["error", 15]
  },
  "ignorePatterns": ["cypress/*", "test/*"]
}
